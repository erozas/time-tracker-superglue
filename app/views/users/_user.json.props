json.id Current.user.try(:id)
json.is_authenticated Current.user.present?
json.email_address Current.user.try(:email_address)
json.username Current.user.try(:username)
json.slug Current.user.try(:slug)

json.sign_out_form do
  form_props(url: session_path, method: :delete) do |f|
    f.hidden_field :authenticity_token
    f.submit
  end
end
